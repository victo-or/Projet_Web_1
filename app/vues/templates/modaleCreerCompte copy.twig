      <label>Prénom</label>
      <input name="utilisateur_prenom" value="">
      <span id="err_utilisateur_prenom">&nbsp;</span>

      <label>Pseudo</label>
      <input name="utilisateur_pseudo" value="">
      <span id="err_utilisateur_pseudo">&nbsp;</span>

      <label>Courriel</label>
      <input name="utilisateur_courriel" value="">
      <span id="err_utilisateur_courriel">&nbsp;</span>

