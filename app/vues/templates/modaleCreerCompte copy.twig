<dialog id="modaleCreerCompte" class="modale">
  <section>
    <h1>Créer un compte</h1>
    
    <form id="frmCreerCompte" name="frmCreerCompte" method="POST">

      <br><span id="messageErreurCreerCompte">&nbsp;</span>

      <label>Nom</label>
      <input name="utilisateur_nom" value="">
